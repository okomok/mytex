\ProvidesPackage{strd}

\usepackage{amsmath,mathtools}
\usepackage{tikz}
\usepackage[active,tightpage]{preview}
\usetikzlibrary{backgrounds,shapes,positioning,fit,calc}

\pgfdeclarelayer{strdcelllabellayer}
\pgfsetlayers{background,main,strdcelllabellayer}


% styles

% no transparent color?
\tikzset{strd celllabel/.style={font=\scriptsize,rounded corners,draw,fill=white,inner sep=2pt}}
\tikzset{strd edgelabel/.style={font=\tiny,inner sep=0pt,strd textvaligned}}
\tikzset{strd endlabel/.style={font=\scriptsize,inner sep=1pt,strd textvaligned}}
\tikzset{strd valigned/.style={baseline={([yshift=-0.5ex]current bounding box.center)}}}
\tikzset{strd textvaligned/.style={text height=0.5em,text depth=0.1em}}
\tikzset{strd coord/.style={coordinate}}
\tikzset{strd junc/.style={circle,draw=black,fill=black,minimum size=1.5pt,inner sep=0pt}}
\tikzset{strd cornering/.style={}}
\tikzset{strd mathnodes/.style={execute at begin node=$,execute at end node=$}}
\tikzset{strd none/.style={opacity=0,text opacity=0,fill opacity=0}}


% environmentals 

\newcommand{\strd}[1]{%
    \begin{tikzpicture}[strd mathnodes]
        \strddeclareorigin
        #1;
    \end{tikzpicture}%
}

%remove me
\newcommand{\strdbg}[1]{%
    \begin{pgfonlayer}{background}
        #1;
    \end{pgfonlayer}%
}

\newcommand{\strdpreview}[1]{%
    \begin{preview}
        \begin{math}
            #1
        \end{math}
    \end{preview}%
}

\newcommand{\strdgathered}[1]{%
    \begin{gathered}
        \strd{#1}
    \end{gathered}%
}


% strings

\newcommand{\strdcoordat}[3]{%
    \node[strd coord] (#3 Start) at (#1,#2) {};
    \node[strd coord] (#3) at (#1,#2) {};
    \node[strd coord] (#3 End) at (#1,#2) {};%
}

\newcommand{\strddeclareorigin}{%
    \strdcoordat{0}{0}{strdorigin}%
}

\newcommand{\strdorigin}{strdorigin}

\newcommand{\strdcoord}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at (#1 End) {};
    \node[strd coord] (#2 End) at (#1 End) {};%
}

\newcommand{\strdleft}[2]{%
    \node[strd coord,strd junc] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2 Corner) at ($(#1 End)+(-0.5,-0.25)$) {};
    \node[strd coord] (#2) at ($(#1 End)+(-0.5,-0.4)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(-0.5,-0.7)$) {};
    \draw[strd cornering]{
        (#2 Start) -- (#2 Corner) -- (#2 End)
    };%
}

\newcommand{\strdright}[2]{%
    \strdflip{ \strdleft{#1}{#2} }%
}

\newcommand{\strdunleft}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at ($(#1 End)+(0,-0.3)$) {};
    \node[strd coord] (#2 Corner) at ($(#1 End)+(0,-0.45)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(0.5,-0.7)$) {};
    \draw[strd cornering]{
        (#2 Start) -- (#2 Corner) -- (#2 End)
    };%
}

\newcommand{\strdunright}[2]{%
    \strdflip{ \strdunleft{#1}{#2} }%
}

\newcommand{\strdline}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at ($(#1 End)+(0,-0.35)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(0,-0.7)$) {};
    \draw{
        (#2 Start) -- (#2 End)
    };%
}

\newcommand{\strdlineleft}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at ($(#1 End)+(-0.25,0)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(-0.5,0)$) {};
    \draw{
        (#2 Start) -- (#2 End)
    };%
}

\newcommand{\strdlineright}[2]{%
    \strdflip{ \strdlineleft{#1}{#2} }%
}

% remove me
\newcommand{\strdfit}[2]{%
    \strdbg{
        \node[strd celllabel,draw=none,fit=#1] (#2 fit) {};
    }%
}

\newcommand{\strdjunc}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd junc] (#2) at (#1 End) {};
    \node[strd coord] (#2 End) at (#1 End) {};%
}


% labels

\newcommand{\strdcelllabel}[3]{%
    \begin{pgfonlayer}{strdcelllabellayer}
        \node[strd celllabel] (#2) at (#1) {#3};
    \end{pgfonlayer}%
}

\newcommand{\strdhomobjlabel}[3]{%
    \node[strd edgelabel,left] at (#1) {#2};
    \node[strd edgelabel,right] at (#1) {#3};%
}

\newcommand{\strdstartlabel}[2]{%
    \node[strd endlabel,above] at (#1 Start) {#2};%
}

\newcommand{\strdendlabel}[2]{%
    \node[strd endlabel,below] at (#1 End) {#2};%
}

% remove me
\newcommand{\strdmcatlabel}[3]{%
    \node[strd endlabel,#2] at (#1) {#3};%
}


% transformations

\newcommand{\strdidentity}[1]{#1}

\newcommand{\strdflip}[1]{%
    \begin{scope}[xscale=-1]
        #1;
    \end{scope}%
}

\newcommand{\strdreverse}[1]{%
    \begin{scope}[yscale=-1]
        #1;
    \end{scope}%
}

\newcommand{\strdxscale}[2]{%
    \begin{scope}[xscale=#1]
        #2;
    \end{scope}%
}

\newcommand{\strdyscale}[2]{%
    \begin{scope}[yscale=#1]
        #2;
    \end{scope}%
}

\newcommand{\strdxshift}[2]{%
    \begin{scope}[xshift=#1] 
        #2;
    \end{scope}%
}

\newcommand{\strdyshift}[2]{%
    \begin{scope}[yshift=#1] 
        #2;
    \end{scope}%
}

\newcommand{\strdshift}[3]{%
    \begin{scope}[xshift=#1,yshift=#2] 
        #3;
    \end{scope}%
}

\newcommand{\strdnodraw}[1]{%
    \begin{scope}[every path/.style=strd none,every node/.style=strd none] 
        #1;
    \end{scope}%
}


% utilities

\newcommand{\strdstrut}{\strut}
\newcommand{\strddefeq}{\coloneqq}

\newcommand\strddef[2]{%
    \expandafter\newcommand\csname #1\endcsname{#2}%
}
