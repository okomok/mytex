    }% 
}


% Squares
%

\tikzset{strd bijsq/.style={solid,thin,sharp corners}}
\tikzset{strd mapsq/.style={rounded corners=2pt}}

\newcommand*{\strdlbijsq}[2]{%
    \strdonlayer{strd labellayer}{
