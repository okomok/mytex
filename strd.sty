% environmentals 

\newcommand{\strd}[1]{%
    \begin{tikzpicture}[strd mathnodes]
        \strddeclareorigin
        #1;
    \end{tikzpicture}%
}

%remove me
\newcommand{\strdbg}[1]{%
    \begin{pgfonlayer}{background}
        #1;
    \end{pgfonlayer}%
}

\newcommand{\strdpreview}[1]{%
    \begin{preview}
        \begin{math}
            #1
        \end{math}
    \end{preview}%
}

\newcommand{\strdgathered}[1]{%
    \begin{gathered}
        \strd{#1}
    \end{gathered}%
}


% string constructors
%   A string 's' is a triple of nodes 's Start', 's' and 's End'.

\newcommand{\strdrange}[4]{%
    \node[strd coord] (#1 Start) at (#2) {};
    \node[strd coord] (#1) at (#3) {};
    \node[strd coord] (#1 End) at (#4) {};%
}

\newcommand{\strdcoordat}[3]{%
    \node[strd coord] (#3 Start) at (#1,#2) {};
    \node[strd coord] (#3) at (#1,#2) {};
    \node[strd coord] (#3 End) at (#1,#2) {};%
}

\newcommand{\strdcoord}[2]{%
    \node[strd coord] (#2 Start) at (#1) {};
    \node[strd coord] (#2) at (#1) {};
    \node[strd coord] (#2 End) at (#1) {};%
}

\newcommand{\strddeclareorigin}{%
    \strdcoordat{0}{0}{strdorigin}%
}

\newcommand{\strdorigin}{strdorigin}


% string combinators

\newcommand{\strdempty}[2]{%
    \node[strd coord] (#2) at (#1 End) {};
    \node[strd coord] (#2 Start) at (#2) {};
    \node[strd coord] (#2 End) at (#2) {};%
}

% golden ratio
\newcommand{\strdleft}[2]{%
    \node[strd coord,strd junc] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2 Corner) at ($(#1 End)+(-0.5,-0.3)$) {};
    \node[strd coord] (#2) at ($(#1 End)+(-0.5,-0.5)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(-0.5,-0.8)$) {};
    \draw[strd cornering]{
        (#2 Start) -- (#2 Corner) -- (#2 End)
    };%
}

\newcommand{\strdright}[2]{%
    \strdflip{ \strdleft{#1}{#2} }%
}

\newcommand{\strdunleft}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at ($(#1 End)+(0,-0.3)$) {};
    \node[strd coord] (#2 Corner) at ($(#1 End)+(0,-0.5)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(0.5,-0.8)$) {};
    \draw[strd cornering]{
        (#2 Start) -- (#2 Corner) -- (#2 End)
    };%
}

\newcommand{\strdunright}[2]{%
    \strdflip{ \strdunleft{#1}{#2} }%
}

\newcommand{\strdline}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at ($(#1 End)+(0,-0.4)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(0,-0.8)$) {};
    \draw{
        (#2 Start) -- (#2 End)
    };%
}

\newcommand{\strdlineleft}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2) at ($(#1 End)+(-0.25,0)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(-0.5,0)$) {};
    \draw{
        (#2 Start) -- (#2 End)
    };%
}

\newcommand{\strdlineright}[2]{%
    \strdflip{ \strdlineleft{#1}{#2} }%
}

\newcommand{\strdjump}[2]{%
    \strdnone{ \strdline{#1}{#2} }%
}

\newcommand{\strdshiftleft}[2]{%
    \strdnone{ \strdlineleft{#1}{#2} }%
}

\newcommand{\strdshiftright}[2]{%
    \strdnone{ \strdlineright{#1}{#2} }%
}

\newcommand{\strdjunc}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd junc] (#2) at (#1 End) {};
    \node[strd coord] (#2 End) at (#1 End) {};%
}

\newcommand{\strdcell}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd junc] (#2) at ($(#1 End)+(0,-0.25) {};
    \node[strd coord] (#2 End) at (#2) {};%
}

% labels

\newcommand{\strdcelllabel}[2]{%
    \begin{pgfonlayer}{strdcelllabellayer}
        \node[strd celllabel] at (#1) {#2};
    \end{pgfonlayer}%
}

\newcommand{\strdlinelabel}[3]{%
    \node[strd edgelabel,left] at (#1) {#2};
    \node[strd edgelabel,right] at (#1) {#3};%
}

\newcommand{\strdihomlabel}[3]{%
    \node[strd edgelabel,left] at (#1) {[#2};
    \node[strd edgelabel,right] at (#1) {#3]};%
}

\newcommand{\strdstartlabel}[2]{%
    \node[strd endlabel,above] at (#1 Start) {#2};%
}

\newcommand{\strdendlabel}[2]{%
    \node[strd endlabel,below] at (#1 End) {#2};%
}

% remove me
\newcommand{\strdmcatlabel}[3]{%
    \node[strd endlabel,#2] at (#1) {#3};%
}


% transformations

\newcommand{\strdflip}[1]{%
    \begin{scope}[xscale=-1]
        #1;
    \end{scope}%
}

\newcommand{\strdreverse}[1]{%
    \begin{scope}[yscale=-1]
        #1;
    \end{scope}%
}

\newcommand{\strdxscale}[2]{%
    \begin{scope}[xscale=#1]
        #2;
    \end{scope}%
}

\newcommand{\strdyscale}[2]{%
    \begin{scope}[yscale=#1]
        #2;
    \end{scope}%
}

\newcommand{\strdscale}[3]{%
    \begin{scope}[xscale=#1,yscale=#2] 
        #3;
    \end{scope}%
}

\newcommand{\strdnone}[1]{%
    \begin{scope}[every path/.style=strd none,every node/.style=strd none] 
        #1;
    \end{scope}%
}

\newcommand{\strdpathwith}[2]{%
    \begin{scope}[every path/.style=#1]
        #2;
    \end{scope}%
}


% utilities

\newcommand{\strdstrut}{\strut}
\newcommand{\strddefeq}{\coloneqq}
\newcommand{\strdidentity}[1]{#1}
\newcommand{\strdvoid}[1]{}

\newcommand\strdassign[2]{%
    \global\csdef{#1}{#2}
    #2
}

% other strings

\newcommand{\strdbypassleft}[2]{%
    \node[strd coord] (#2 Start) at (#1 End) {};
    \node[strd coord] (#2 StartCorner) at ($(#1 End)+(-0.25,0)$) {};
    \node[strd coord] (#2) at ($(#1 End)+(-0.25,-0.4)$) {};
    \node[strd coord] (#2 EndCorner) at ($(#1 End)+(-0.25,-0.8)$) {};
    \node[strd coord] (#2 End) at ($(#1 End)+(0,-0.8)$) {};
    \draw{
        (#2 Start) -- (#2 StartCorner) -- (#2 EndCorner) -- (#2 End)
    };%
}

\newcommand{\strdbypassright}[2]{%
    \strdflip{ \strdbypassleft{#1}{#2} }%
}

\newcommand{\strdrectangle}[2]{%
    \strdbypassleft{#1}{#2 Left}
    \strdjump{#1}{#2}
    \strdbypassright{#1}{#2 Right}%
}

\newcommand{\strdbijection}[2]{%
    \strdpathwith{strd bijection}{
        \strdrectangle{#1}{#2}
    }%
}

\newcommand{\strdmapping}[2]{%
    \strdpathwith{strd mapping}{
        \strdrectangle{#1}{#2}
    }%
}

% composed strings

\newcommand{\strdbranch}[2]{%
    \strdline{#1}{#2 Branch}
    \strdleft{#2 Branch}{#2 Left}
    \strdright{#2 Branch}{#2 Right}
    \strdyscale{2}{ \strdjump{#1}{#2} }%
}

\newcommand{\strdparallel}[2]{%
    \strdjump{#1}{#2}
    \strdshiftleft{#1}{#2 Left}
    \strdline{#2 Left}{#2 Left} % funny name-conflict
    \strdshiftright{#1}{#2 Right} 
    \strdline{#2 Right}{#2 Right}%
}

