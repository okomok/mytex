% List construction
%

\def\myUnlistize#1{#1\myUnlistize@{}}
\def\myUnlistize@#1{#1\Foldr\Commaize{}}

\def\myListize#1%
   {\myListize@#1,\relax\@eolst}
\def\myListize@#1,#2\@eolst%
   {\TeXif{\ifx\relax#2}%
        {\Singleton{#1}}%
        {\Cons{#1}{\myListize@#2\@eolst}}}


% Lambda expressions
%

\newcommand*{\mylambdanamed}[2]{%
    \expandafter\newcommand\csname#1\endcsname[1]{#2}\csuse{#1}%
}
\newcounter{mylambdacounter}
\newcommand*{\mylambda}{%
    \stepcounter{mylambdacounter}%
    \mylambdanamed{mylambda\the\value{mylambdacounter}}%
}

