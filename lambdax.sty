\newcommand*{\Flip}[3]{#1{#3}{#2}}


% List construction
%  can't support empty lists.

\def\BraceUnlistize#1{#1\BraceUnlistize@{}}
\def\BraceUnlistize@#1{#1\Foldr\Commaize{}}

\def\BraceListize#1%
   {\BraceListize@#1,\relax\@eolst}
\def\BraceListize@#1,#2\@eolst%
   {\TeXif{\ifx\relax#2}%
        {\Singleton{#1}}%
        {\Cons{#1}{\BraceListize@#2\@eolst}}}


% Lambda expressions
%

\newcommand*{\FunNamed}[2]{%
    \expandafter\newcommand\csname#1\endcsname[1]{#2}\csuse{#1}%
}
\newcounter{Funcounter}
\newcommand*{\Fun}{%
    \stepcounter{Funcounter}%
    \FunNamed{Fun\the\value{Funcounter}}%
}

\def\In#1#2{\Foldr{\In@}{#2}{\BraceListize{#1}}}
\newcommand*{\In@}[2]{\begin{#1}#2\end{#1}}

